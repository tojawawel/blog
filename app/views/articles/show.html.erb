<h1>My article</h1>

<p>
  <strong>Title</strong>
  <%= @article.title %>
</p>
<p>
  <strong>Text</strong>
  <%= @article.text %>
</p>

<%= form_for @article.comments.new do |f| %>
  <%= f.hidden_field :article_id %>
  <p>
    <%= f.label :commenter %>
    <%= f.text_field :commenter %>
  </p>
  <p>
    <%= f.label :body %>
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>
<%= link_to 'Back', articles_path %>
<%= link_to 'Edit', edit_article_path(@article) %>
