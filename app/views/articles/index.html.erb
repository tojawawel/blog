<h1>My articles</h1>
<%= link_to 'New article', new_article_path %>


<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Text</th>
      <th>Tags</th>
      <th></th>
      <th></th>
      <th></th>
      <th>Comments</th>
    </tr>
  </thead>
  <tbody>
    <% @articles.each do |article| %>
    <tr>
      <td><%= article.title %></td>
      <td><%= article.text %></td>
      <td><%= article.tags %></td>
      <td><%= link_to 'Show', article_path(article) %></td>
      <td><%= link_to 'Edit', edit_article_path(article) %></td>
      <td><%= link_to 'Delete', article_path(article), method: :delete, data: {confirm: "Pewniak?"} %></td>
      <td><%= article.comments.count %></td>
    </tr>
    <% end %>
  </tbody>
</table>
