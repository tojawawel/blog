<h2>Comments</h2>
<%= render 'common/errors', model: @comment %>

<%= form_for [@article, @comment], url:article_comments_path(@article, @comment) do |f| %>
  <p><%= f.hidden_field :article_id %></p>
  <div class="form-group">
    <%= f.label :body %>
    <%= f.text_area :body, class: "form-control", placeholder:"Tekst...." %>
  </div>
  <div class="form-group">
    <%= f.submit class: "btn btn-primary" %>
  </div>
<% end %>
